mixin navbar(user)    
    nav.navbar.navbar-expand.navbar-light.bg-light
      a(href="/", aria-label="Golden Goose").navbar-brand.mr-0.mr-md-2
        img(src="/images/image.png", width="36", height="36")
      .collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href="/") Home
          li.nav-item
            a.nav-link(href="/leads") Leads
      .navbar-right
        if user
          span.navbar-text Hello #{user.username}!
      .navbar-right
        ul.navbar-nav.mr-auto
          if !user
            li.nav-item
              a.nav-link(href="/signup") Sign up
          if !user
            li.nav-item
              a.nav-link(href="/login") Log in
          if user
            li.nav-item
              a.nav-link(href="/logout") Log out