doctype html
html(lang='en')
  include common/head.pug
  +head("Starter MVP")
  body
    header
      include common/nav.pug
      +navbar(user)
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1.mb-3 Welcome to leads Collector!
            p.lead The must-have app for every agile sales team!
            p.lead.mb-4 This app is essential to keep track of your potential customers/clients. Give it a try and sign up! This demo is absolutely free of charge!
            form(action="/", method="POST")
              .input-group.mb-3
                input(name="lead_email", type="email", placeholder="Enter the email of the lead!").form-control
                .input-group-append
                  button(type="submit").btn.btn-primary Save lead
    include common/footer.pug
    +footer()
    script(src="/javascripts/leads.js")

  

