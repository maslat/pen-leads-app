doctype html
html(lang='en')
  include ../common/head.pug
  +head("Sign up and get access!")
  body
    header
      include ../common/nav.pug
      +navbar()
      .container
        .row
            .col-sm-12.offset-md-2.col-md-8
                .jumbotron
                    h2.text-center Sign up
                        .row
                            .col-sm-12.col-md-12
                                form(action="/login", method="POST")
                                    .formgroup
                                        label.small.mb-1.mt-3 Email:
                                        input(placeholder="Please enter your email", required=true
                                        name='email', type='email', value='').form-control
                                        label.small.mb-1.mt-3 Password:
                                        input(placeholder="New Password", required=true
                                        name='password', type='password', value='').form-control
                                        button.mt-3.btn.btn-primary(type="submit") Log in
                                        p.mt-2.mb-0
                                            | Forgot your password? #[a(href="#") Reset here]    
                                        p.m_0
                                            | Don' have an acoount? #[a(href="/signup") Sign up here]    
    include ../common/footer.pug
    +footer()
    script(src="/javascripts/leads.js")

  

