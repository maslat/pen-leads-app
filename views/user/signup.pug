doctype html
html(lang='en')
  include ../common/head.pug
  +head("Sign up and get access!")
  body
    header
      include ../common/nav.pug
      +navbar()
      .container
        .row
            .col-sm-12.offset-md-2.col-md-8
                .jumbotron
                    h2.text-center Sign up
                        .row
                            .col-sm-12.col-md-12
                                form(action="/signup", method="POST")
                                    .formgroup
                                        label.small.mb-1.mt-3 FirstName:
                                        input(placeholder="eg. Thomas", required=true
                                        name='firstname', type='name', value=formData.firstname).form-control
                                        label.small.mb-1.mt-3 LastName:
                                        input(placeholder="eg. Field", required=true
                                        name='lastname', type='name', value=formData.lastname).form-control
                                        label.small.mb-1.mt-3 Email:
                                        input(placeholder="Please enter your email", required=true
                                        name='email', type='email', value=formData.email).form-control
                                        if(errors && errors.email)
                                            p.small.text-danger #{errors.email}
                                        label.small.mb-1.mt-3 UserName:
                                        input(placeholder="Please enter your username", required=true
                                        name='username', type='username', value=formData.username).form-control
                                        label.small.mb-1.mt-3 Password:
                                        input(placeholder="New Password", required=true
                                        name='password', type='password', value='').form-control
                                        if(errors && errors.password)
                                            p.small.text-danger #{errors.password}
                                        button.mt-3.btn.btn-primary(type="submit") Sign up
                                        p.mt-2.mb-0
                                            | Already have an account? #[a(href="/login") Login here]    
    include ../common/footer.pug
    +footer()
    script(src="/javascripts/leads.js")

  

